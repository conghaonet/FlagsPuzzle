<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/res_bg_settings"
	>
	<FrameLayout
	    android:id="@+id/adLayout" 
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
	    />
	<LinearLayout
	    android:id="@+id/buttonsLayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_above="@id/adLayout"
		>
		<Button
			android:id="@+id/freeQuizF2nBtn1"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="button1"
			/>
		<Button
			android:id="@+id/freeQuizF2nBtn2"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="button2"
			/>
		<Button
			android:id="@+id/freeQuizF2nBtn3"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="button3"
			/>
		<Button
			android:id="@+id/freeQuizF2nBtn4"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="button4"
			/>
	</LinearLayout>
	<TextView
		android:id="@+id/freeQuizF2nQuestionIndexText"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:textSize="15sp"
		android:textColor="#FFFFFF"
		android:typeface="serif"
		android:gravity="center"
		android:layout_marginBottom="10dp"
		android:text="99/230"
		android:layout_above="@id/buttonsLayout"
		/>
		
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:layout_above="@id/freeQuizF2nQuestionIndexText"
		android:layout_centerHorizontal="true"
		>
		<ImageView
			android:id="@+id/freeQuizF2nFlagImg"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:adjustViewBounds="true"
			android:scaleType="centerInside"
			android:src="@drawable/n_np"
			android:background="#A9A9A9"
			android:layout_gravity="center"
			/>
		<ImageView
			android:id="@+id/freeQuizF2nCorrectImg"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center"
			android:src="@drawable/res_answer_correct_big"
			/>
		<ImageView
			android:id="@+id/freeQuizF2nWrongImg"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center"
			android:src="@drawable/res_answer_wrong_big"
			/>
	</FrameLayout>
</RelativeLayout>